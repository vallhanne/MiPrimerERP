<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.AlbumClass" table="Album" schema="Chinook">
        <id name="albumId">
            <column name="AlbumId" sql-type="int" not-null="true"/>
        </id>
        <property name="title">
            <column name="Title" sql-type="varchar(160)" length="160" not-null="true"/>
        </property>
        <property name="artistId">
            <column name="ArtistId" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>